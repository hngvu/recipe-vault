<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activity.PremiumUpgradeActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Upgrade to Premium"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:background="@color/primary_orange" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Premium Benefits Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Premium Crown Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/primary_orange">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star"
                        app:tint="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Vault Premium"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock exclusive features and enhance your culinary journey"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Premium Benefits List -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium Benefits"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:layout_marginBottom="16dp" />

                    <!-- Benefit 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/primary_orange"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlimited Recipe Storage"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save as many recipes as you want"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Benefit 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_search"
                            app:tint="@color/primary_orange"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Advanced Search Filters"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Find recipes by ingredients, diet, allergens"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Benefit 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_time"
                            app:tint="@color/primary_orange"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Smart Meal Planning"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly meal plans with shopping lists"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Benefit 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_share"
                            app:tint="@color/primary_orange"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Export and Backup"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Export recipes to PDF, backup to cloud"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Pricing Plans -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Plan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_marginBottom="16dp" />

            <!-- Monthly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_monthly_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Perfect for trying Premium"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$4.99"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="per month"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Yearly Plan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_yearly_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Popular Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Most Popular"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_orange"
                        android:background="@drawable/circle_background_orange"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_gravity="end"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yearly"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save 17% with annual billing"
                                android:textSize="14sp"
                                android:textColor="@color/success_green" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$49.99"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="per year"
                                android:textSize="14sp"
                                android:textColor="@color/gray_dark" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Only $4.16/month"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Upgrade Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upgrade_premium"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Upgrade to Monthly - $4.99/month"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@color/primary_orange"
                app:cornerRadius="12dp" />

            <!-- Restore Purchases Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_restore_purchases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restore Purchases"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button.TextButton"
                app:backgroundTint="@android:color/transparent"
                android:textColor="@color/primary_orange" />

            <!-- Terms and Privacy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By upgrading, you agree to our Terms of Service and Privacy Policy. Subscription automatically renews unless cancelled."
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_orange" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>